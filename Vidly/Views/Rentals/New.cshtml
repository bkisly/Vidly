@{
    ViewData["Title"] = "New rental";
}

<h2>@ViewData["Title"]</h2>

<form>
    <div class="form-group form-floating">
        <input id="customer" type="text" class="form-control" value="" placeholder="Customer"/>
        <label>Customer</label>
    </div>     
    <div class="form-group form-floating">
        <input id="movie" type="text" class="form-control" value="" placeholder="Movie"/>
        <label>Movie</label>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customer").autocomplete({
                source: "/api/names/customers",
                select: function (event, ui) {
                    console.log("You have selected a customer named " + ui.item.value);
                }
            });

            $("#movie").autocomplete({
                source: "/api/names/movies",
                select: function (event, ui) {
                    console.log("You have selected a movie called " + ui.item.value);
                }
            });
        });
    </script>
}