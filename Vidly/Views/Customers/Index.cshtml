@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>
@Html.ActionLink("New customer", "New", new { }, new { @class = "btn btn-primary form-group" })

@if(Model.Any())
{
    <table id="customers" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Membership type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Customer customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", new { id = customer.Id })</td>
                    <td>@customer.MembershipType.Name</td>
                    <td><button class="btn-link js-delete" data-customer-id="@customer.Id">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no customers yet.</p>
}

@section scripts {
    <script>
        $(document).ready(function () {
            $("#customers .js-delete").on("click", function () {
                let button = $(this);

                if(confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "api/customers/" + button.attr("data-customer-id"),
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    })
                }
            });
        });
    </script>
}
