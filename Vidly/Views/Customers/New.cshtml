@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewData["Title"] = "New customer";
}

<h2>New customer</h2>

@using(Html.BeginForm("Create", "Customers"))
{
    <div class="form-group form-floating form-vertmargin-1">
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control", placeholder = "Name" })
        @Html.LabelFor(m => m.Customer.Name)
    </div>
    <div class="form-group form-floating form-vertmargin-1">
        @Html.TextBoxFor(m => m.Customer.BirthDate, new { @class = "form-control", placeholder = "Date of birth"})
        @Html.LabelFor(m => m.Customer.BirthDate)
    </div>
    <div class="form-group form-vertmargin-1">
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Customer.IsSubscribedToNewsletter)
    </div>
    <div class="form-group form-vertmargin-1">
        @Html.LabelFor(m => m.Customer.MembershipTypeId, new { @class = "form-vertmargin-2" })
        @Html.DropDownListFor(
            m => m.Customer.MembershipTypeId, 
            new SelectList(Model.MembershipTypes, "Id", "Name"), 
            "Select membership type...", 
            new { @class = "form-select" })
    </div>
}
